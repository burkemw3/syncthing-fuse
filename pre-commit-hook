#!/bin/sh
# Copyright 2012 The Go Authors. All rights reserved.
# Use of this source code is governed by a BSD-style
# license that can be found in the LICENSE file.

# check if assets haven't been re-generated

assets_generation=$(stat -f %m lib/autogenerated/gui.files.go)
for f in $(git diff --cached --name-only --diff-filter=ACMDR | grep '^gui/'); do
    file_modification=$(stat -f %m $f)
    if (( $file_modification > $assets_generation )); then
        echo >&2 "Assets should be re-packed. Run:"
        echo >&2 "    go run scripts/packassets.go gui > lib/autogenerated/gui.files.go"
        exit 1
    fi
done

# git gofmt pre-commit hook
#
# To use, store as .git/hooks/pre-commit inside your repository and make sure
# it has execute permissions.
#
# This script does not handle file names that contain spaces.

gofiles=$(git diff --cached --name-only --diff-filter=ACM | grep '.go$')
[ -z "$gofiles" ] && exit 0

unformatted=$(gofmt -l $gofiles)
[ -z "$unformatted" ] && exit 0

# Some files are not gofmt'd. Print message and fail.

echo >&2 "Go files must be formatted with gofmt. Please run:"
for fn in $unformatted; do
    echo >&2 "  gofmt -w $PWD/$fn"
done

exit 1

